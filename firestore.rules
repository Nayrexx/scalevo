rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- USERS ---
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // --- SUBSCRIPTIONS (written by Cloud Functions only) ---
    match /subscriptions/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // --- ADDONS (written by Cloud Functions only, read by owner) ---
    match /addons/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // --- STORES ---
    match /stores/{storeId} {
      // Owner: full access (get/list/update/delete)
      allow get, update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      // Public: read published stores (for storefront)
      allow get: if resource.data.published == true;
    }

    // --- PRODUCTS (subcollection of store) ---
    match /stores/{storeId}/products/{productId} {
      // Owner full access
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      // Public: read published products of published stores
      allow read: if get(/databases/$(database)/documents/stores/$(storeId)).data.published == true
        && resource.data.published == true;
    }

    // --- FUNNELS (subcollection of store) ---
    match /stores/{storeId}/funnels/{funnelId} {
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      // Public read for storefront
      allow read: if get(/databases/$(database)/documents/stores/$(storeId)).data.published == true;
    }

    // --- ORDERS (subcollection of store) â€” written by Netlify Functions ---
    match /stores/{storeId}/orders/{orderId} {
      allow read: if request.auth != null
        && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      // Allow write from server (admin SDK bypasses rules)
      allow write: if false;
    }

    // --- SLUG LOOKUP (public read, written by server via admin SDK) ---
    match /slugs/{slug} {
      allow read: if true;
      // Slugs are created/deleted by Netlify Functions (admin SDK bypasses rules)
      allow write: if false;
    }

    // --- PAYMENT LOGS (written by Functions) ---
    match /paymentLogs/{logId} {
      allow read: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow write: if false;
    }
  }
}
